                                      | Tree Nuts
                                .form-check
                                    input.form-check-input(name='allergies' type='checkbox', value='Celery' checked='')
                                    |   
                                    label.form-check-label
                                      | Celery
                                .form-check
                                    input.form-check-input(name='allergies' type='checkbox', value='Mustard' checked='')
                                    |   
                                    label.form-check-label
                                      | Mustard
                                .form-check
                                    input.form-check-input(name='allergies' type='checkbox', value='Eggs' checked='')
                                    |   
                                    label.form-check-label
                                      | Eggs
                                .form-check
                                    input.form-check-input(name='allergies' type='checkbox', value='Milk' checked='')
                                    |   
                                    label.form-check-label
                                      | Milk
                              .col-6        
                                .form-check
                                    input.form-check-input(name='allergies' type='checkbox', value='Sesame' checked='')
                                    |   
                                    label.form-check-label
                                      | Sesame
                                .form-check
                                    input.form-check-input(name='allergies' type='checkbox', value='Fish' checked='')
                                    |   
                                    label.form-check-label
                                      | Fish
