extends layout

block content
  section#categories
    .pricing-header.px-3.py-3.pt-md-5.pb-md-4.mx-auto.text-center
      h1.display-4 Settings
      p.lead
        | 
    .container
      nav
        #nav-tab.nav.nav-tabs(role='tablist')
            a#nav-home-tab.nav-item.nav-link.active(data-toggle='tab', href='#nav-home', role='tab', aria-controls='nav-home', aria-selected='true') Company
            |     
            a#nav-profile-tab.nav-item.nav-link(data-toggle='tab', href='#nav-profile', role='tab', aria-controls='nav-profile', aria-selected='false') Sites
            |     
            a#nav-contact-tab.nav-item.nav-link(data-toggle='tab', href='#nav-contact', role='tab', aria-controls='nav-contact', aria-selected='false') Import Recipes
        #nav-tabContent.tab-content
          #nav-home.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='nav-home-tab')
            .container
              .col-12
                br
                form(method='POST', action='/companies/add')
                #form-group
                  label Company Name:
                  input.form-control(name='name', type='text' disabled value=company.name)
                #form-group
                  label Address:
                  input.form-control(name='address', type='text')
                #form-group
                  label City:
                  input.form-control(name='city', type='text')
                #form-group
                  label County:
                  input.form-control(name='county', type='text')
                #form-group
                  label Post Code:
                  input.form-control(name='postcode', type='text')
                #form-group
                  label Country:
                  input.form-control(name='country', type='text')
                #form-group
                  label Phone Number:
                  input.form-control(name='phone', type='text')
                  br
                input.btn.btn-primary(type='submit', value='Save')
                a.btn.btn-danger(href='/') Cancel  
          #nav-profile.tab-pane.fade(role='tabpanel', aria-labelledby='nav-profile-tab')
            .container
              br
              col-lg-12.mb-4
                // DataTales Example
                .card.shadow.mb-4
                  .card-header.py-3
                    h6.m-0.font-weight-bold.text-primary Sites - 
                      a.collapse-item(href='#createSite', data-toggle='modal', data-target='#createSite') Add Site
                  .card-body
                    .table-responsive
                      table#dataTable.table.table-bordered(width='100%', cellspacing='15')
                        thead
                          tr
                            th Site ID
                            th Site Name
                            th Address
                            th City
                            th County
                            th Postcode
                            th Country
                            th Contact
                            th Status
                        tbody
                          each sites, i in site
                            tr.odd.gradeX
                              td  
                                = sites.id
                              td  
                                = sites.name
                              td
                                = sites.address
                              td
                                = sites.city
                              td  
                                = sites.county
                              td
                                = sites.postcode
                              td
                                = sites.country   
                              td
                                = sites.phonenumber
                              td
                                = sites.status  
                
                          
          #nav-contact.tab-pane.fade(role='tabpanel', aria-labelledby='nav-contact-tab')
            .container
              | hfjkdhfsdkj
              
    // /.container-fluid
    // End of Main Content
    #addRecipe.modal.fade(tabindex='-1', role='dialog', aria-labelledby='addUserLabel', aria-hidden='true')
      .modal-dialog(role='document')
          .modal-content
              .modal-header
                  h5#addRecipeLabel.modal-title Add Recipe
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span(aria-hidden='true')
              .modal-body
                  form(method='POST', action='/recipes/add' enctype="multipart/form-data")
                      
                      #form-group
                          label Title:
                          input.form-control(name='title', type='text')
                      #form-group
                          label Decription:
                          input.form-control(name='description', type='text')
                      #form-group
                          label timetocook:
                          input.form-control(name='image', type='text')
                      #form-group
                          label dfficulty:
                          input.form-control(name='timetocook', type='text')
                      #form-group
                          label servings:
                          input.form-control(name='dfficulty', type='text')
                      #form-group
                          label image:
                          input.form-control(type='file', name='image')    
                      #form-group
                          label ingredients:
                          input.form-control(name='servings', type='text')
                          br
                      input.btn.btn-primary(type='submit', value='Submit')
                      a.btn.btn-danger(href='/recipes') Cancel
    #createSite.modal.fade(tabindex='-1', role='dialog', aria-labelledby='createSiteLabel', aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#createSiteLabel.modal-title Create Site
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true')
          .modal-body
            form(method='POST', action='/sites/add')
              #form-group
                label Name:
                input.form-control(name='name', type='text')
              #form-group
                label Email:
                input.form-control(name='email', type='text')
              #form-group
                label Address:
                input.form-control(name='address', type='text')
              #form-group
                label City:
                input.form-control(name='city', type='text')
              #form-group
                label County:
                input.form-control(name='county', type='text')
              #form-group
                label Post Code:
                input.form-control(name='postcode', type='text')
              #form-group
                label Country:
                input.form-control(name='country', type='text')
              #form-group
                label Phone Number:
                input.form-control(name='phonenumber', type='text')
                br
              input.btn.btn-primary(type='submit', value='Submit')
              a.btn.btn-danger(href='/') Cancel                     
      